<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <% box = (task.completed ? '<i class="fa-regular fa-square-check"></i>' : '<i class="fa-regular fa-square"></i>') %>
    <li>
      <%= raw(box) %>
      <%= link_to task.title, task_path(task) %>
      <%= " -- " %>
      <%= link_to raw('<i class="fa-solid fa-trash-can"></i>'), task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<p><%= link_to "+ Add a new task", new_path %></p>
